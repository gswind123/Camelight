<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView 
        android:id="@+id/close_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/close_btn_selector"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#80ffffff"
        android:orientation="vertical"
        android:gravity="center">
        <TextView 
            android:id="@+id/guide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_20_000000"
            android:text="@string/desc_front_light_guide"/>
        
	    <LinearLayout
	        android:id="@+id/degree_view"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:gravity="center">
		    
		    <ImageView 
		        android:id="@+id/face_left"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:background="@drawable/face_left" />
		    <ImageView 
		        android:id="@+id/sun_left"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:background="@drawable/sun" />
		        
		    <TextView
		        android:id="@+id/arrow_left"
		        android:background="@drawable/left_arrow"
		        android:layout_width="0dp"
		        android:layout_height="50dp"/>
		    
		    <TextView
		        android:id="@+id/arrow_right"    
		        android:background="@drawable/right_arrow"
		        android:layout_width="0dp"
		        android:layout_height="50dp"/>
		    
		    <ImageView 
		        android:id="@+id/face_right"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:background="@drawable/face_right" />
		    <ImageView 
		        android:id="@+id/sun_right"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:background="@drawable/sun" />
	    </LinearLayout>
	    
        
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">
		
        <TextView
            android:id="@+id/degree_text" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
        
	</LinearLayout>
    
</FrameLayout>
