<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	
	<FrameLayout
	    android:id="@+id/camera_frame"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
	    
	    <com.camelight.android.view.util.CameraView
	        android:id="@+id/camera_surface"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>

	</FrameLayout>
	
	<TextView 
	    android:id="@+id/test_info"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="@style/text_20_000000"/>
	
	<LinearLayout
	    android:id="@+id/control_bar"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:gravity="center"
	    android:background="#cc020202"
	    android:orientation="horizontal"
	    android:layout_gravity="bottom">
	    
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal">
		    <ImageView
		        android:id="@+id/btn_start_guide"
		        android:layout_width="70dp"
		        android:layout_height="45dp"
		        android:background="@drawable/btn_start_guide_selector"/>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal">
	        <ImageView
		        android:id="@+id/btn_take_photo"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:background="@drawable/btn_take_photo_selector"/>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal">
	        
		    <ImageView
		        android:id="@+id/btn_switch_camera"
		        android:layout_width="70dp"
		        android:layout_height="45dp"
		        android:background="@drawable/btn_switch_camera_selector"/>
	    </LinearLayout>
	    
	</LinearLayout>
</FrameLayout>
