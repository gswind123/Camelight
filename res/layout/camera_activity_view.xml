<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	
	<FrameLayout
	    android:id="@+id/camera_frame"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	    
	    
	    <com.camelight.android.view.util.CameraView
	        android:id="@+id/camera_surface"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>

	</FrameLayout>
	
	<LinearLayout
	    android:id="@+id/camera_menu"
	    android:layout_width="match_parent"
	    android:layout_height="75dp"
	    android:gravity="center"
	    android:orientation="horizontal">
	    
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal">
		    <ImageView
		        android:id="@+id/btn_start_guide"
		        android:layout_width="57dp"
		        android:layout_height="37dp"
		        android:background="@drawable/btn_start_guide_selector"/>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal">
	        <ImageView
		        android:id="@+id/btn_take_photo"
		        android:layout_width="37dp"
		        android:layout_height="37dp"
		        android:background="@drawable/btn_take_photo_selector"/>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal">
	        
		    <ImageView
		        android:id="@+id/btn_setttings"
		        android:layout_width="57dp"
		        android:layout_height="37dp"
		        android:background="@drawable/btn_start_guide_selector"/>
	    </LinearLayout>
	    
	</LinearLayout>
</LinearLayout>
